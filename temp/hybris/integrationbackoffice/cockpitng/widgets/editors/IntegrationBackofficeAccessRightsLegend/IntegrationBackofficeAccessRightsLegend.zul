            <span class="integrationbackoffice-legened-label">${labels.integrationbackoffice.accessRightsLegend.inherited}</span>
        </div>
        <div class="integrationbackoffice-legend-item integrationbackoffice-legend-item--denied">
            <span class="integrationbackoffice-legend-icon integrationbackoffice-legend-icon--denied"></span>
            <span class="integrationbackoffice-legened-label">${labels.integrationbackoffice.accessRightsLegend.denied}</span>
        </div>
        <div class="integrationbackoffice-legend-item">
            <span class="integrationbackoffice-legend-icon"></span>
            <span class="integrationbackoffice-legened-label">${labels.integrationbackoffice.accessRightsLegend.granted}</span>
        </div>
