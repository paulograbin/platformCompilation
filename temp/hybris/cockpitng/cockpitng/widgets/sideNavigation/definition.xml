<widget-definition id="com.hybris.cockpitng.widgets.common.sidenavigation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">
	<name>Side Navigation</name>
	<description>Shows a hierarchical structure.</description>
	<defaultTitle>Side Navigation</defaultTitle>
	<author>hybris</author>
	<version>1.0</version>

	<sockets>
		<input id="nodeIdSelected" type="com.hybris.backoffice.navigation.TreeNodeSelector" />
		<output id="nodeIdSelected" type="com.hybris.backoffice.navigation.TreeNodeSelector" />
		<output id="dataSelected" type="java.lang.Object" />
		<output id="onSearchButtonClick" type="java.lang.Object" />
	</sockets>

	<settings>
		<setting key="treeItemRenderer" type="java.lang.String" default-value="sideNavigationRenderer"/>
		<setting key="hasSearchButton" type="java.lang.Boolean" default-value="false"/>
		<setting key="explorerTreeConfigCtx" default-value="explorer-tree" type="String" />
	</settings>

	<view src="sidenavigation.zul" />

	<controller
		class="com.hybris.cockpitng.widgets.common.sidenavigation.SideNavigationController" />

	<keywords>
		<keyword>Navigation</keyword>
	</keywords>

</widget-definition>
