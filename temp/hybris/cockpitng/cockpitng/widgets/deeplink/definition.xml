<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="com.hybris.cockpitng.widgets.deeplink">

    <name>Deep Link Widget</name>
    <description>Widget that allows to consume deep link (#deeplink) in the URL.
    </description>
    <defaultTitle>Deeplink Widget</defaultTitle>
    <author>hybris</author>
    <version>1.0</version>

    <controller class="com.hybris.cockpitng.widgets.deeplink.DeepLinkController"/>

    <sockets>
        <output id="defaultEntity" type="java.lang.Object"/>
        <output id="navigateExplorerTreeNode" type="com.hybris.backoffice.navigation.TreeNodeSelector"/>
        <output id="navigatePerspective" type="java.lang.String"/>
    </sockets>

    <view src="none"/>
    <keywords>
        <keyword>Deep Link</keyword>
    </keywords>

    <settings>
        <setting key="deepLinkConfigCtx" default-value="deep-link" type="String" />
    </settings>

</widget-definition>
