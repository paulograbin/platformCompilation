<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="com.hybris.cockpitng.genericbookmarkhandler">

    <name>Generic Bookmark Handler</name>
    <description>Generic widget that allows to consume bookmarks (#bookmark) in the URL by custom strategies.
    </description>
    <defaultTitle>Bookmark Handler</defaultTitle>
    <author>hybris</author>
    <version>1.0</version>

    <controller class="com.hybris.cockpitng.widgets.controller.bookmark.GenericBookmarkHandlerController"/>

    <sockets>
        <output id="defaultEntity" type="java.lang.Object"/>
    </sockets>

    <view src="none"/>
    <keywords>
        <keyword>Bookmarks</keyword>
    </keywords>

    <settings>
        <setting key="handlerBean" type="java.lang.String" default-value=""/>
    </settings>

</widget-definition>
